import java.util.Scanner;
public class fext3{
  public static void main(String[]args){
   boolean valid=false;
   int count=0;
   String[] em={"abc@gmail.com", "!@cv.bd",  "123cse@bracu.ac.bd"};
   for(int i=0;i<em.length;i++){
     valid=false;
     for(int j=0;j<em[i].length();j++){
     if(em[i].charAt(j)=='@'||em[i].charAt(j)=='.'){
       if((em[i].charAt(j+1)>='a'&&em[i].charAt(j+1)<='z')||(em[i].charAt(j+1)>='A'&&em[i].charAt(j+1)<='Z')){
       if((em[i].charAt(j-1)>='a'&&em[i].charAt(j-1)<='z')||(em[i].charAt(j-1)>='A'&&em[i].charAt(j-1)<='Z')){
       valid=true;
       }
       }
     }
   }
     if(valid) count++;
   }
  System.out.println(count);
  }
}