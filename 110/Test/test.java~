import java.util.Scanner;
 public class test{
  public static void main(String[] args){
    Scanner sc=new Scanner(System.in);
    System.out.print("Enter Number");
    int n=sc.nextInt();
    boolean flag1,flag2=true,found=false;
    int prime=0;
    for(int i=2;i<=n/2;i++){
      flag1=true;
      flag2=true;
      for(int j=2;j<=Math.sqrt(i);j++){
        if(i%j==0){
          flag1=false;
          break;
  }
}
       prime=n-i;
        if(flag1==true){
          for(int k=2;k<=Math.sqrt(prime);k++){
            if(prime%k==0){
             flag2=false;
             break;
            }
          }
        }
      if(flag1 && flag2){
              if((i+prime)==n){
                System.out.println(i+" + "+prime+" = "+n);
                found=true;
        }
      }      
    }if(!found) System.out.println("no prime pair found");
  }
}
