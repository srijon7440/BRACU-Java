import java.util.Scanner;
 public class Task14{
  public static void main(String[] args){
   Scanner sc=new Scanner(System.in);
   System.out.print("Enter row:");
   int row=sc.nextInt();
   int n=row;
     for(int r=1;r<=row;r++){
       for(int i=1;i<r;i++){
       System.out.print(" ");
     }
       for(int j=1;j<=n;j++){
         System.out.print(j);
       }n--;
     for(int l=n;l>0;l--)
         System.out.print(l);
     
         System.out.println();
   }
  }
 }