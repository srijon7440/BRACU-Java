import java.util.Scanner;
 public class Task11{
  public static void main(String[] args){
   Scanner sc=new Scanner(System.in);
   System.out.print("Enter row");
   int row=sc.nextInt();
   for(int r=1;r<=row;r++){
     for(int sp=1;sp<=row-r;sp++){
       System.out.print(" ");
    }
     for(int num=1;num<=2*r-1;num++){
       if(num==1||num==2*r-1)
         System.out.print(num);
       else
         System.out.print(" ");
    }System.out.println();
   }
   int c=2*row-3;
   for(int i=1;i<row;i++){
     for(int j=1;j<=i;j++){
       System.out.print(" ");
     }
     for(int k=1;k<=c;k++){
       if(k==1||k==c)
       System.out.print(k);
       else
       System.out.print(" ");
     }
       c-=2;
       System.out.println();
   }
  }
 }