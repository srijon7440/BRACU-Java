import java.util.Scanner;
public class Task09{
  public static void main(String[]args){
    Scanner sc=new Scanner(System.in);
    System.out.print("Enter Row: ");
    int row=sc.nextInt();
    int nsp=row;
    int nst=row;
    for(int i=1;i<=row;i++){
      for(int j=1;j<nsp;j++){
       System.out.print(" ");
        }nsp--;
      for(int k=nst;k<=row;k++){
        if(i==1||i==row){
          System.out.print(k);
        }
        else if(k==nst||k==row){
          System.out.print(k);
        }
        else
          System.out.print(" ");
      }
        nst--;
        System.out.println();
     }
    }    
  }

 